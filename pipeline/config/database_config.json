{
  "database": {
    "server": "${DB_SERVER}",
    "database": "${DB_NAME}",
    "schema": "tree11",
    "port": 1433,
    "driver": "ODBC Driver 17 for SQL Server"
  },
  "authentication": {
    "type": "sql_auth",
    "username": "${DB_USERNAME}",
    "password": "${DB_PASSWORD}",
    "use_windows_auth": false,
    "use_azure_auth": false
  },
  "connection_pool": {
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600,
    "pool_pre_ping": true
  },
  "timeouts": {
    "connection_timeout": 30,
    "command_timeout": 120,
    "query_timeout": 300
  },
  "batch_operations": {
    "batch_size": 1000,
    "max_batch_size": 10000,
    "bulk_insert_batch_size": 5000,
    "use_bulk_operations": true
  },
  "error_handling": {
    "max_retries": 3,
    "retry_delay": 5,
    "retry_backoff_factor": 2,
    "deadlock_retry_attempts": 5,
    "connection_retry_attempts": 3
  },
  "logging": {
    "log_sql_queries": false,
    "log_parameters": false,
    "log_execution_time": true,
    "slow_query_threshold": 10
  },
  "backup_and_recovery": {
    "backup_before_major_operations": true,
    "transaction_isolation_level": "READ_COMMITTED",
    "use_transactions": true,
    "rollback_on_error": true
  },
  "performance": {
    "use_fast_executemany": true,
    "autocommit": false,
    "enable_query_cache": false,
    "connection_string_extras": {
      "TrustServerCertificate": "yes",
      "Encrypt": "yes",
      "MultipleActiveResultSets": "false"
    }
  },
  "monitoring": {
    "track_connection_usage": true,
    "log_slow_queries": true,
    "monitor_deadlocks": true,
    "alert_on_connection_failures": true
  }
} 